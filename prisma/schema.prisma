generator client { 
  provider = "prisma-client-js" 
} 
 
datasource db { 
  provider = "sqlite" 
  url      = env("DATABASE_URL") 
} 
 
// User Roles 
enum UserRole { 
  EMPLOYEE 
  MANAGER 
  HR_ADMIN 
  SYSTEM_ADMIN 
} 
 
// Leave Request Status 
enum LeaveStatus { 
  PENDING 
  APPROVED 
  REJECTED 
  CANCELLED 
} 
 
model User { 
  id            String   @id @default(cuid()) 
  email         String   @unique 
  passwordHash  String 
  name          String 
  role          UserRole @default(EMPLOYEE) 
  employeeId    String?  @unique 
  isActive      Boolean  @default(true) 
  createdAt     DateTime @default(now()) 
  updatedAt     DateTime @updatedAt 
  @@map("users") 
} 
 
model LeaveRequest { 
  id        String      @id @default(cuid()) 
  userId    String 
  startDate DateTime 
  endDate   DateTime 
  totalDays Float 
  reason    String? 
  status    LeaveStatus @default(PENDING) 
  createdAt DateTime    @default(now()) 
  updatedAt DateTime    @updatedAt 
  @@map("leave_requests") 
} 
